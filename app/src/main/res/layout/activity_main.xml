<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <non.shahad.roundedviews.button.RoundedButton
        android:id="@+id/roundedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        app:button_corner_radius="16dp"
        app:button_padding="16dp"
        app:button_shape_background_color="@color/colorPrimaryDark"
        app:isShrinkEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <non.shahad.roundedviews.textview.RoundedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        app:corner_radius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/roundedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:padding_left_and_right="8dp"
        app:padding_top_and_bottom="8dp"
        app:shape_background_color="@color/colorAccent" />
</androidx.constraintlayout.widget.ConstraintLayout>